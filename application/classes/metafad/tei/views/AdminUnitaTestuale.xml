      <pnx:Fieldset label="Titolo">
        <pnx:Input id="titolo" label="Titolo" required="true" type="multiline" rows="1" wrap="on" htmlEditor="true"/>
        <pnx:List id="tipologia" label="Tipologia" emptyValue=" - ">
